				  						<button type="button" id="nutella"><img src="img/panini-nutella.png" width="90%"></button>
				  						<p>Panini Nutella</p>
				  					</div>
				  					<div>
				  						<button type="button" id="cookies"><img src="img/cookie.png" width="100%"></button>
				  						<p>Cookies</p>
				  					</div>
				  					<div>
				  				    	<button type="button" id="confiture"><img src="img/confiture.png" width="90%"></button>
				  				    	<p>Panini Confiture</p>
				  					</div>
